<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape
            android:shape="rectangle">
            <padding
                android:right="5dp"
                android:left="5dp"
                android:top="5dp"
                android:bottom="5dp"/>
            <stroke
                android:width="2dp"
                android:dashGap="0dp"
                android:dashWidth="10dp"
                android:color="@color/gray" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

</selector>